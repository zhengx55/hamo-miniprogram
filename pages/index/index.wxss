/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  width: 100%;
  flex-direction: column;
}

.swiper {
  width: 100%;
  height: 310rpx;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.swiper-image {
  width: 100rpx;
  height: 100rpx;
}

.swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
}

.service-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.service-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #424242;
  margin-top: 10rpx;
}

.icon {
  height: 65rpx;
}

.most-popular {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 99rpx;
  height: 135rpx;
  width: 135rpx;
}